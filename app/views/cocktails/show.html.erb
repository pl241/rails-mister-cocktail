

<h2><%= @cocktail.name %></h2>

<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>Ingredient: <%= dose.ingredient.name %> | <%= dose.description %>
    <%= link_to "delete", dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  </li>
  <% end %>
</ul>

<%= link_to "Back to all cocktails", cocktails_path %>
<br>
<br>
<%= link_to "Add dose", new_cocktail_dose_path(@cocktail) %>
