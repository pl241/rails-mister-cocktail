
<div class="container">

  <div class="top">
    <div class="" id="">
      <h1>All cocktails</h1>
    </div>
    <div class="">
      <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-success" %>
    </div>
  </div>

  <div class="row">

    <% @cocktails.each do |cocktail| %>

      <div class="col-xs-12 col-sm-6 col-md-4">
        <h2><%= cocktail.name %></h2>
        <%= cl_image_tag cocktail.photo, height: 300, width: 400, crop: :fit %>
        <br>
        <br>
        <p>
          <%= link_to "More details", cocktail_path(cocktail) %>
          <%= link_to "delete", cocktail_path(cocktail), class: "delete",
            method: :delete,
            data: { confirm: "Are you sure?" } %>
        </p>
      </div>

    <% end %>
  </div>

