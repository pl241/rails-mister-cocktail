
<div class="container">

  <div class="top">
      <h1>Admin List of Cocktails</h1>

      <%= link_to "Add a cocktail", new_adminpl241_cocktail_path, class: "btn btn-success" %>
  </div>

  <div class="row">

    <% @cocktails.each do |cocktail| %>

      <div class="col-xs-12 col-sm-6 col-md-4">
        <h3><%= cocktail.name %></h3>
        <%= cl_image_tag cocktail.photo, height: 300, width: 400, crop: :fit %>
        <br>
        <br>
        <p>
          <%= link_to "More details", adminpl241_cocktail_path(cocktail) %>
          <%= link_to "delete", adminpl241_cocktail_path(cocktail), class: "delete",
            method: :delete,
            data: { confirm: "Are you sure?" } %>
        </p>
      </div>

    <% end %>
  </div>

